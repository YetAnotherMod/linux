config RCM_VDU_VIDEO
	tristate "RCM VDU video output support"
	depends on VIDEO_V4L2
	select FB_RCM_VDU_CORE
	default n
	---help---
	  Support for V4L2 interface to RCM VDU.

config RCM_VPU_CODA980
	tristate "RCM VPU CODA980 video codec driver"
	default n
	---help---
	  RCM VPU CODA980 (Chips Media) video codec driver.

config RCM_CODA_J10
	depends on 1888TX018
	bool "RCM JPEG CODA J10 codec driver"
	default n
	---help---
	RCM JPEG CODA J10 codec driver

config RCM_VDU_GRABBER
	depends on 1888TX018
	depends on VIDEO_V4L2
	depends on VIDEO_V4L2_SUBDEV_API
	depends on MEDIA_CONTROLLER
	bool "RCM VDU grabber driver"
	select VIDEOBUF2_DMA_CONTIG
	select VIDEOBUF2_VMALLOC
	select VIDEO_ADV_DEBUG
	select V4L2_FWNODE
	default n
	---help---
	RCM VDU grabber driver
	
